{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "distribution",
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["source"],
  "exclude": ["node_modules"]
}
